        }

        .accept-button {
            background-color: #28A745;
            color: #FFF;
        }

        .accept-button:hover {
            background-color: #218838;
        }

        .decline-button {
            background-color: #DC3545;
            color: #FFF;
        }

        .decline-button:hover {
