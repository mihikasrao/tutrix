<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TUTRIX Home</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.11.3/main.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/main.min.css" rel="stylesheet">
    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
    <style>
        /* Basic Reset */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Layout */
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Top Bar */
        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #E6E6FA;
            border-bottom: 1px solid #DDD;
        }

        .app-title {
            font-size: 1.5em;
            font-weight: bold;
            margin-left: 10px;
        }

        .icon-button {
            background: none;
            border: none;
            font-size: 1.5em;
            cursor: pointer;
            margin-right: 10px;
        }

        /* Search Bar */
        .search-bar {
            display: flex;
            align-items: center;
            margin: 20px 0;
            padding: 10px;
            background-color: #E6E6FA;
            border-radius: 5px;
        }

        .search-input {
            flex: 1;
            padding: 10px;
            border: none;
            outline: none;
        }

        .search-icon {
            margin-left: 10px;
            cursor: pointer;
        }

        /* Recent Searches */
        .recent-searches {
            margin-top: 20px;
        }

        .recent-item {
            padding: 15px;
            border-bottom: 1px solid #DDD;
            cursor: pointer;
        }

        /* Find Tutors Button */
        .find-tutors-button {
            display: block;
            margin: 20px auto;
            padding: 12px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            text-align: center;
        }

        .find-tutors-button:hover {
            background-color: #0056b3;
        }

        /* Calendar Styling */
        #calendar {
            margin-top: 20px;
            max-width: 100%;
        }

        /* Bottom Navigation Bar */
        .bottom-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 60px;
            display: flex;
            justify-content: space-around;
            align-items: center;
            background-color: #E6E6FA;
            border-top: 1px solid #DDD;
        }

        .nav-item {
            flex: 1;
            text-align: center;
            padding: 5px 0;
            font-size: 0.9em;
            color: #000;
            background: none;
            border: none;
            cursor: pointer;
        }

        .nav-item:hover {
            background-color: #DCDCDC;
        }
    </style>
</head>
<body>
    <!-- Top Bar -->
    <header class="top-bar">
        <h1 class="app-title">TUTRIX</h1>
        <button class="icon-button" onclick="viewProfile()">üë§</button>
    </header>

    <!-- Main Content -->
    <main class="container">
        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" id="search-text" class="search-input" placeholder="What subject do you need help in?">
            <span class="search-icon" onclick="handleSearch()">üîç</span>
        </div>

        <!-- Recent Searches -->
        <section class="recent-searches">
            <h3>Recent Searches</h3>
            <div class="recent-item" onclick="setSearchText('Calculus I')">Calculus I</div>
            <div class="recent-item" onclick="setSearchText('Financial Accounting')">Financial Accounting</div>
            <div class="recent-item" onclick="setSearchText('General Chemistry')">General Chemistry</div>
        </section>

        <!-- Find Tutors Button -->
        <button class="find-tutors-button" onclick="navigateToTutors()">Find Tutors Near Me</button>

       
    </main>

    <!-- Bottom Navigation Bar -->
    <nav class="bottom-bar">
        <button class="nav-item" onclick="navigate('home')">üè†<br>Home</button>
        <button class="nav-item" onclick="navigate('services')">üõ†Ô∏è<br>Services</button>
        <button class="nav-item" onclick="navigate('activity')">üìä<br>Activity</button>
        <button class="nav-item" onclick="navigate('account')">üë§<br>Account</button>
    </nav>

    <script>
        // Navigation Function
        function navigate(section) {
            handleSearch(); 
        }


        function navigateToTutors() {
            const searchText = document.getElementById('search-text').value.trim(); 

            if (searchText) {
                // If there's a search term, include it in the URL
                window.location.href = `/find-tutors?subject=${encodeURIComponent(searchText)}`;
            } else {
                // Otherwise, navigate to the tutors page normally
                window.location.href = '/find-tutors';
            }
        }

        function setSearchText(text) {
            document.getElementById('search-text').value = text;
        }

        function handleSearch() {
            const searchText = document.getElementById('search-text').value.trim();
            if (!searchText) {
                alert('Please enter a subject.');
                return;
            }
            window.location.href = `/find-tutors?subject=${encodeURIComponent(searchText)}`;
        }

        function viewProfile() {
            window.location.href = '/profile';
        }


    </script>
</body>
</html>
