<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutrix - Student Profile</title>
    <style>
        /* General Reset */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #F8F9FA;
            color: #333;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height: 100vh;
        }

        .container {
            max-width: 700px;
            margin: 20px auto;
            padding: 20px;
        }

        /* Header */
        .header {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-bottom: 20px;
            padding: 0 20px;
        }

        /* Logout Button */
        .logout-button {
            font-size: 1rem;
            font-weight: bold;
            color: #4B0082;
            background-color: transparent;
            border: 2px solid #4B0082;
            border-radius: 20px;
            padding: 8px 20px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .logout-button:hover {
            background-color: #4B0082;
            color: white;
        }

        /* Profile Section */
        .profile-section {
            text-align: center;
            margin-bottom: 20px;
        }

        .profile-pic {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 10px;
        }

        .profile-name {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .profile-role {
            font-size: 1rem;
            color: #666;
        }

        /* Divider */
        .divider {
            height: 1px;
            background-color: #DDD;
            margin: 20px 0;
        }

        /* Stats Section */
        .stats {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .stat-item {
            text-align: center;
            flex: 1;
        }

        .stat-item h3 {
            font-size: 1.4rem;
            color: #4B0082;
            margin-bottom: 5px;
        }

        .stat-item p {
            font-size: 0.9rem;
            color: #666;
        }

        /* Information Sections */
        .info-section {
            margin-bottom: 20px;
        }

        .section-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #4B0082;
            margin-bottom: 10px;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            font-size: 1rem;
        }

        .info-item span {
            color: #333;
        }

        .info-item:last-child {
            margin-bottom: 0;
        }

        /* Bottom Navigation Bar */
        .bottom-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            height: 60px;
            display: flex;
            justify-content: space-around;
            align-items: center;
            background-color: #E6E6FA;
            border-top: 1px solid #DDD;
        }

        .nav-item {
            flex: 1;
            text-align: center;
            font-size: 0.9rem;
            color: #333;
            cursor: pointer;
        }

        .nav-item:hover {
            background-color: #DCDCDC;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <button class="logout-button" onclick="window.location.href='/logout'">Logout</button>
        </div>

        <!-- Profile Section -->
        <div class="profile-section">
            <!-- Display Profile Picture -->
            <<img src="<%= profile.profilePicture || '/uploads/default-profile.jpeg' %>" 
            alt="Profile Picture" class="profile-pic">
            
            <!-- Upload Form -->
            <form class="upload-form" action="/upload-profile-picture-student" method="POST" enctype="multipart/form-data">
                <input type="file" name="profilePicture" accept="image/*" required>
                <button type="submit" style="margin-top: 10px;">Upload New Picture</button>
            </form>
        
            <div class="profile-name"><%= user.name %></div>
            <div class="profile-role">Student</div>
        </div>
        

        <!-- Divider -->
        <div class="divider"></div>

        <!-- Stats Section -->
        <div class="stats">
            <div class="stat-item">
                <h3><%= profile.completedSessions %></h3>
                <p>Completed Sessions</p>
            </div>
            <div class="stat-item">
                <h3><%= profile.upcomingLessons.length %></h3>
                <p>Upcoming Lessons</p>
            </div>
            <div class="stat-item">
                <h3><%= profile.major %></h3>
                <p>Major</p>
            </div>
        </div>

        <!-- Divider -->
        <div class="divider"></div>

        <!-- Profile Information -->
        <div class="info-section">
            <div class="section-title">Profile Information</div>
            <div class="info-item">
                <span>Email:</span>
                <span><%= user.email %></span>
            </div>
            <div class="info-item">
                <span>Graduation Year:</span>
                <span><%= profile.graduationYear %></span>
            </div>
            <div class="info-item">
                <span>Interests:</span>
                <span><%= profile.interests.join(', ') %></span>
            </div>
            <div class="info-item">
                <span>Learning Styles:</span>
                <span><%= profile.learningStyles.join(', ') %></span>
            </div>
        </div>

        <!-- Divider -->
        <div class="divider"></div>

        <!-- Upcoming Lessons -->
        <div class="info-section">
            <div class="section-title">Upcoming Lessons</div>
            <% profile.upcomingLessons.forEach((lesson) => { %>
            <div class="info-item">
                <span><%= lesson.tutor %></span>
                <span><%= new Date(lesson.date).toLocaleString('en-US', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    hour12: true
                }) %></span>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Bottom Navigation Bar -->
    <nav class="bottom-bar">
        <div class="nav-item" onclick="window.location.href='/home'">üè† Home</div>
        <div class="nav-item" onclick="window.location.href='/services'">üõ†Ô∏è Services</div>
        <div class="nav-item" onclick="window.location.href='/activity'">üìä Activity</div>
        <div class="nav-item" onclick="window.location.href='/account'">üë§ Account</div>
    </nav>
</body>
</html>
